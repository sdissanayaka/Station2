@model IEnumerable<Station2.Models.Supplier>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="border backgroundWhite">
        <div class="row">
            <!--div class="col-3">
                <h2 class="text-primary">Suppliers</h2>
            </!--div-->
            <div class="col-12">
                <a asp-action="Create" class="btn btn-primary bg-gradient-cyan rounded-pill mr-2"><i class="fas fa-plus"></i> &nbsp; Add New Supplier</a>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">Suppliers </h1>
        </div>
        <!-- /.card-header -->
        <div class="card-body">

            <table id="example1" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.SupplierName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SupplierAddress)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CompanyrName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PhoneNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupplierName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupplierAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CompanyrName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                <a asp-action="Edit" class="btn btn-success bg-gradient-cyan rounded-pill mr-2" style="cursor:pointer; width:100px;" asp-route-id="@item.SupplierId"><i class="fas fa-edit"></i> &nbsp; Edit</a>
                                <a asp-action="Delete" class="btn btn-danger bg-gradient-red rounded-pill mr-2" style="cursor:pointer; width:100px;" asp-route-id="@item.SupplierId"><i class="fas fa-trash-alt"></i> &nbsp; Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
