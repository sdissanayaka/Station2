@model IEnumerable<Station2.Models.CustomerOrder>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header">
        <h1 class="card-title">Orders List </h1>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th class="text-center">Customer Order Id</th>
                    <th class="text-center">First Name</th>
                    <th class="text-center">Last Name</th>
                    <th class="text-center">Address</th>
                    <th class="text-center">Phone Number</th>
                    <th class="text-center">Email</th>
                    <th class="text-center"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var line in Model)
                {
                    <tr>
                        <td class="text-center">@line.CustomerOrderId)</td>
                        <td class="text-center">@line.FirstName</td>
                        <td class="text-center">@line.LastName</td>
                        <td class="text-center">@line.AddressLine1</td>
                        <td class="text-center">@line.PhoneNumber</td>
                        <td class="text-center">@line.Email</td>
                        <td>
                            <a asp-area="Admin" asp-controller="JobCards" asp-action="Details" class="btn btn-success bg-gradient-cyan rounded-pill mr-2" style="cursor:pointer; width:100px;" asp-route-id="@line.CustomerOrderId">@*<i class="fas fa-edit"></i>*@ &nbsp; Job Card</a>
                            <a asp-area="Admin" asp-controller="JobCards" asp-action="Create" class="btn btn-success bg-gradient-cyan rounded-pill mr-2" style="cursor:pointer; width:100px;">@*<i class="fas fa-edit"></i>*@ &nbsp; Invoice</a>

                        </td>




                    </tr>
                }



            </tbody>
        </table>
        </div>
    </div>


